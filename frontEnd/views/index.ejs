<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Challenge Chapter 5</title>

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link href="css/index.css" rel="stylesheet">

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-1 p-0">
                <%- include('sidebar'); %> 
            </div>
            <div class="col-1">
                <%- include('sidebar2'); %> 
            </div>
            <div class="col-10">
                <%- include('navbar');  %>
                <section id="breadcrumb" class="content my-5">
                    <!-- Breadcrumb -->
                    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Cars</a></li>
                        <li class="breadcrumb-item active" aria-current="page">List Car</li>
                        </ol>
                    </nav>
                    <div class="row list-custom">
                        <div class="col-10"><h3>List Car</h3></div>
                        <div class="col-2 ps-0">
                            <a href="/add-car" id="btn-tambah" type="button" class="btn btn-primary"><img src="images/add-content.png" style="margin-top: -5px;"/> Add New Car</a>
                        </div>
                    </div>
                    <button type="button" id="all-cars" class="btn btn-active btn-outline me-1"><p>All</p></button>
                    <button type="button" id="small-cars" class="btn btn-outline me-1"><p>Small</p></button>
                    <button type="button" id="medium-cars" class="btn btn-outline me-1"><p>Medium</p></button>
                    <button type="button" id="large-cars" class="btn btn-outline me-1"><p>Large</p></button>
                </section>
            
                <section id="list-cars">
                    <div class="container-fluid">
                        <div class="row row-cols-auto justify-content-left" id="cars-container" style="margin-top: 0; padding-top: 0;">
                            <% data.forEach(element => { %>
                                <div class="col-lg-4 col-md-4 col-sm-12 mb-4">
                                    <div class="card" style="width: 20.1rem;">
                                        <img src="<%= element.car_image %>" class="card-img-top img-fluid" style="height: 215px;object-fit: cover; padding: 40px 10px 10px 10px;" />
                                        <div class="card-body">
                                            <p class="card-title" style="font-family: 'IBM Plex Sans'; font-style: normal; font-weight: 500; font-size: 14px; line-height: 20px; height: 20px;"><%= element.car_name %></p>
                                            <p class="fw-bold" style="font-family: 'IBM Plex Sans'; font-style: normal; font-weight: 700; font-size: 16px; line-height: 24px; height: 24px; margin-bottom: 8px;">Rp <%= element.rent_cost %>  / hari</p>
                                            <div class="row my-0 py-0">
                                              <div class="col-md-1">
                                                <img src="images/clock-card.png" style="width: 20px; height: 20px">
                                              </div>
                                              <div class="col-md-11">
                                                <p style="font-family: 'IBM Plex Sans'; font-style: normal; font-weight: 300; font-size: 14px; line-height: 20px; margin-top: 5px;">&nbsp;&nbsp;Updated at <%= element.updatedAt %> </p>
                                              </div>
                                            </div>
                                            <div class="row">
                                                <div class="col">
                                                    <button onclick="Swal.fire({
                                                        title: 'Menghapus Data Mobil',
                                                        text: 'Setelah dihapus, data mobil tidak dapat dikembalikan. Yakin ingin menghapus?',
                                                        type: 'warning',
                                                        imageUrl :'/images/delete-confirmation.png',
                                                        showCancelButton: true,
                                                        confirmButtonClass: 'btn-danger',
                                                        confirmButtonText: 'Yes, delete it!',
                                                        closeOnConfirm: false
                                                    }).then((result)=>{
                                                        if(result.value){
                                                            swal.fire('Deleted!', 'Your imaginary file has been deleted.', 'success');
                                                            location.href ='/delete-car/<%= element.id %> '
                                                        }
                                                    })" class="btn btn-outline-danger text-red w-100 fw-bold my-2" style="font-size: 14px; border-radius: 0;"><img src="images/delete-button.png" class="me-1">Delete</button>
                                                </div>
                                                <div class="col">
                                                    <a href="/update-car/<%= element.id %> " class="btn btn-success text-white w-100 fw-bold my-2" style="font-size: 14px; background-color: #5CB85F; border: 1px solid #5CB85F; border-radius: 0;"><img src="images/edit-button.png" class="me-1">Edit</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>